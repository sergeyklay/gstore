[report]
precision = 2
show_missing = True

[html]
directory = htmlcov

[xml]
output = coverage.xml

[run]
branch = True
parallel = True
data_file = coverage.db
# A list of file name patterns, the files to leave
# out of measurement or reporting.
omit =
    tests/*
    .venv/*
    */__pycache__/*
